<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EventDetailsActivity">

    <TextView
        android:id="@+id/textView13"
        android:layout_width="64dp"
        android:layout_height="43dp"
        android:layout_marginStart="72dp"
        android:layout_marginBottom="4dp"
        android:text="Venue:"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/txtEvVenue"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView12"
        android:layout_width="64dp"
        android:layout_height="44dp"
        android:layout_marginStart="72dp"
        android:layout_marginBottom="4dp"
        android:text="Time:"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/txtEvTime"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/txtEvVenue"
        android:layout_width="207dp"
        android:layout_height="47dp"
        android:layout_marginStart="8dp"
        android:layout_marginBottom="180dp"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/buttonReg"
        app:layout_constraintStart_toEndOf="@+id/textView13" />

    <TextView
        android:id="@+id/txtEvTime"
        android:layout_width="207dp"
        android:layout_height="47dp"
        android:layout_marginStart="8dp"
        android:layout_marginBottom="32dp"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/txtEvVenue"
        app:layout_constraintStart_toEndOf="@+id/textView12" />

    <Button
        android:id="@+id/buttonReg"
        android:layout_width="173dp"
        android:layout_height="60dp"
        android:layout_marginBottom="88dp"
        android:backgroundTint="#CC8D6F3E"
        android:fontFamily="@font/unitedsansheavy"
        android:onClick="GoToEventsList"
        android:text="REGISTER"
        android:textSize="20sp"
        android:typeface="normal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="335dp"
        android:layout_height="131dp"
        android:text="TextView"
        android:textAlignment="center"
        android:textSize="34sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.063" />

    <TextView
        android:id="@+id/txtEvDate"
        android:layout_width="207dp"
        android:layout_height="47dp"
        android:layout_marginStart="8dp"
        android:layout_marginBottom="36dp"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/txtEvTime"
        app:layout_constraintStart_toEndOf="@+id/textView11" />

    <TextView
        android:id="@+id/textView11"
        android:layout_width="64dp"
        android:layout_height="46dp"
        android:layout_marginStart="72dp"
        android:layout_marginBottom="4dp"
        android:text="Date:"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/txtEvDate"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>